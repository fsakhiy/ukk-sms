model TestTable {
  id      Int    @unique @default(autoincrement())
  uuid    String @default(uuid())
  name    String
  payload String
}

model MainSchedule {
  id          Int       @unique @default(autoincrement())
  uuid        String    @default(uuid())
  name        String
  startPeriod DateTime
  endPeriod   DateTime
  class       Classes[]
  createdById Int
  createdBy   User      @relation("ScheduleCreator", fields: [createdById], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  isDeleted   Boolean   @default(false)
  deletedById Int
  deletedBy   User      @relation("ScheduleDeletor", fields: [deletedById], references: [id])
}

model Subject {
  id          Int       @unique @default(autoincrement())
  uuid        String    @default(uuid())
  name        String
  teacherId   Int
  teacher     Teacher   @relation(fields: [teacherId], references: [id])
  class       Classes[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  createdById Int
  createdBy   User      @relation("SubjectCreator", fields: [createdById], references: [id])
  deletedById Int
  deletedBy   User      @relation("SubjectDeletor", fields: [deletedById], references: [id])
}

model Classes {
  id             Int          @unique @default(autoincrement())
  uuid           String       @default(uuid())
  mainScheduleId Int
  MainSchedule   MainSchedule @relation(fields: [mainScheduleId], references: [id])

  startTime DateTime
  endTime   DateTime

  Subject   Subject @relation(fields: [subjectId], references: [id])
  subjectId Int
  isDeleted Boolean @default(false)
}

model Classroom {
  id        Int      @unique @default(autoincrement())
  uuid      String   @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Students Student[]

  createdById Int
  createdBy   User @relation("ClassroomCreator", fields: [createdById], references: [id])

  isDeleted   Boolean @default(false)
  deletedById Int
  deletedBy   User    @relation("ClassroomDeletor", fields: [deletedById], references: [id])
}

model Student {
  id                   Int     @unique @default(autoincrement())
  uuid                 String  @default(uuid())
  name                 String
  schoolNumber         String?
  nationalSchoolNumber String?
  classNumber          Int
  user                 User?

  classroomId Int
  classroom   Classroom @relation(fields: [classroomId], references: [id])

  createdById Int
  createdBy   User @relation("StudentCreator", fields: [createdById], references: [id])

  isDeleted   Boolean @default(false)
  deletedById Int
  deletedBy   User    @relation("StudentDeletor", fields: [deletedById], references: [id])
}

model Teacher {
  id                    Int       @unique @default(autoincrement())
  uuid                  String    @default(uuid())
  name                  String
  teacherNumber         String?
  nationalTeacherNumber String?
  user                  User?
  Subject               Subject[]
}

model User {
  id               Int            @unique @default(autoincrement())
  uuid             String
  username         String
  password         String         @default("12345")
  role             String
  studentId        Int?           @unique
  student          Student?       @relation(fields: [studentId], references: [id])
  teacherId        Int?           @unique
  teacher          Teacher?       @relation(fields: [teacherId], references: [id])
  isAdmin          Boolean?       @default(false)
  scheduleCreator  MainSchedule[] @relation("ScheduleCreator")
  scheduleDeletor  MainSchedule[] @relation("ScheduleDeletor")
  subjectCreator   Subject[]      @relation("SubjectCreator")
  subjectDeletor   Subject[]      @relation("SubjectDeletor")
  classroomCreator Classroom[]    @relation("ClassroomCreator")
  classroomDeletor Classroom[]    @relation("ClassroomDeletor")
  studentCreator   Student[]      @relation("StudentCreator")
  studentDeletor   Student[]      @relation("StudentDeletor")
}
